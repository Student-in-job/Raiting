@model IEnumerable<RatingUniversity.Models.I20_obespechennost_irc_uchebnoy_literaturoy>

@{ Layout = "~/Views/Shared/_LayoutSideMenu.cshtml"; }

<h3>@ViewBag.Title</h3>

<table class="table table-striped" style="font-size:14px;">
    <thead>
        <tr>
            <th>Рейтинг</th>
            <th>Название высшего учебного заведения</th>
            <th>Обеспеченность учебной литературой</th>
            <th>Обеспеченность электронными версиями учебной литературы</th>
            <th>Обеспеченность ИРЦ учебной литературой, включая электронные версии, в соответствии с требованиями учебных программ</th>
            <th>Показатель обеспеченности ИРЦ учебной литературой, включая электронные версии, в соответствии с требованиями учебных программ</th>
            <th>Год проведения рейтинга</th>
        </tr>
    </thead>

@{var position=0;}
@foreach (var item in Model)
{
    position++;
    string name = (ViewBag.lang == "RU") ? item.name_RU : item.name_UZ;
    <tbody>
        <tr>
            <td>
                @position
            </td>
            <td width="35%">
                @RatingUniversity.Classes.Functions.Translate(name, ViewBag.lang, ViewBag.alfabet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I201)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I202)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I20)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YEAR)
            </td>
        </tr>
    </tbody>
}

</table>
