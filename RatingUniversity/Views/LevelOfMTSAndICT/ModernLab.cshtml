@model IEnumerable<RatingUniversity.Models.I23_osnashennost_laboratornim_oborudovaniem>

@{ Layout = "~/Views/Shared/_LayoutSideMenu.cshtml"; }

<h3>@ViewBag.Title</h3>

<table class="table table-striped" style="font-size:14px;">
    <thead>
        <tr>
            <th>Рейтинг</th>
            <th>Название высшего учебного заведения</th>
            <th>Оснащенность учебных предметов лабораторным оборудованием</th>
            <th>Оснащенность современным учебно-презентационным оборудованием</th>
            <th>Степень оснащенности современным учебно-лабораторным и учебно-презентационным оборудованием</th>
            <th>Показатель степени оснащенности современным учебно-лабораторным и учебно-презентационным оборудованием</th>
            <th>Год проведения рейтинга</th>
        </tr>
    </thead>

@{var position=0;}
@foreach (var item in Model)
{
    position++;
    string name = (ViewBag.lang == "RU") ? item.name_RU : item.name_UZ;
    <tbody>
        <tr>
            <td>
                @position
            </td>
            <td width="35%">
                @RatingUniversity.Classes.Functions.Translate(name, ViewBag.lang, ViewBag.alfabet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I231)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I232)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I23)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YEAR)
            </td>
        </tr>
    </tbody>
}

</table>
