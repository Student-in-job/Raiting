@model IEnumerable<RatingUniversity.Models.I21_stepen_vnedreniya_ikt_v_uchebniy_process>

@{ Layout = "~/Views/Shared/_LayoutSideMenu.cshtml"; }

<h3>@ViewBag.Title</h3>

<table class="table table-striped" style="font-size:14px;">
    <thead>
        <tr>
            <th>Рейтинг</th>
            <th>Название высшего учебного заведения</th>
            <th>Степень использования и внедрения ИКТ в учебном процессе и научно-исследовательской работе</th>
            <th>Показатель степени использования и внедрения ИКТ в учебном процессе и научно-исследовательской работе</th>
            <th>Год проведения рейтинга</th>
        </tr>
    </thead>

@{var position=0;}
@foreach (var item in Model)
{
    position++;
    <tbody>
        <tr>
            <td>
                @position
            </td>
            <td width="35%">
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I21)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YEAR)
            </td>
        </tr>
    </tbody>
}

</table>
