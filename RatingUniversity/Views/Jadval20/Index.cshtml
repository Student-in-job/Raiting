@using PagedList.Mvc;
@model PagedList.IPagedList<RatingUniversity.Models.Jadval20>
	<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

	@{
		Layout = "~/Views/Shared/_LayoutSideMenuEdit.cshtml";
		ViewBag.Title = "Jadval20";
	}

	<h2>Бакалавриат битирувчилари ва улардан ўқишни тугатгандан кейин 6 ой мобайнида мутахассислиги бўйича ишга ва таълимнинг кейинги босқичларига ўқишга жойлашганлари ҳақида маълумот
</h2>

	@if ((ViewBag.status == null || ViewBag.status == 0) && ViewBag.status_date == 0 && ViewBag.role != 1)
	{
		<a href="/Jadval20/Download">Загрузить шаблон</a>
		<h3>Прикрепить файл</h3>

		using (Html.BeginForm("Upload", "Jadval20", FormMethod.Post, new { enctype = "multipart/form-data" }))
		{
			<input type="file" name="files" />
			<input type="submit" name="Submit" id="Submit" value="Прикрепить" />
		}
	}
	@if ((ViewBag.status == null || ViewBag.status == 0) && ViewBag.status_date == 1)
	{
		<h3>Ma'lumotlarni kiritish uchun vaqtingiz tugadi</h3>
	}
	@if (ViewBag.status == 1)
	{
		<h3>Ma'lumotlarni tasdiqlangan</h3>
	}
	@if (ViewBag.status == 0)
	{
		<h3>Ma'lumotlar tasdiqlanmagan</h3>
	}
	@if (ViewBag.status == 0 && ViewBag.role == 1)
	{
		<a href="/Jadval20/Tasdiqlash/@ViewBag.UniverId">Подтверждать</a>
	}
	@if (ViewBag.bor == true)
	{
		<h3>Ma'lumotlar:</h3>
		<table class="table">
			<tr>
				<th>
					Фамилияси,исми, шарифи
				</th>
				<th>
					Таълим йўналиши шифри
				</th>
				<th>
					Таълим йўналиши номи
				</th>
				<th>
					Ишга жойлашган корхона (ташкилот ва б.) тўлиқ номи ва почта манзили
				</th>
				<th>
					Шу жумладан мутахассислиги бўйича ишга кирганларнинг лавозими*
				</th>
				<th>
					Магистратурага кирганларнинг таълим муассасаси номи ва почта манзили
				</th>
				<th>
					Файл
				</th>
				<th>
					Йил
				</th>
				<th>
					UniversityId
				</th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.FullName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Talim_yonalish_shifri)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Talim_yonalish_nomi)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Ish_nomi)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Ish_lavozimi)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Mag_otm)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Asos_fayl)
						<br />
						@using (Html.BeginForm("UploadData", "Jadval20", FormMethod.Post, new { enctype = "multipart/form-data" }))
						{
							<input type="file" name="files" />
							<input type="hidden" name="id" value="@Html.DisplayFor(modelItem => item.Id)" />
							<input type="submit" name="Submit" id="Submit" value="Прикрепить" />
						}

					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Year)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.UniversityId)
					</td>
				</tr>
			}

		</table>
		@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))

	}
