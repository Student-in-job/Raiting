@model IEnumerable<RatingUniversity.Models.I12_dolya_trudoustroennih_vipusknikov>

@{ Layout = "~/Views/Shared/_LayoutSideMenu.cshtml"; }

<h3>@ViewBag.Title</h3>

<table class="table table-striped" style="font-size:14px;">
    <tr>
        <th>Рейтинг</th>
        <th>Название высшего учебного заведения</th>
        <th>Доля выпускников, трудоустроенных по специальности в течение 6 месяцев после окончания вуза</th>
        <th>Показатель рейтинга выпускников, трудоустроенных по специальности в течение 6 месяцев после окончания вуза </th>
        <th>Год проведения рейтинга</th>
    </tr>

@{var position=0;}
@foreach (var item in Model)
{
    position++;
    string name = (ViewBag.lang == "RU") ? item.name_RU : item.name_UZ;
    <tr>
        <td>
            @position
        </td>
        <td width="35%">
            @RatingUniversity.Classes.Functions.Translate(name, ViewBag.lang, ViewBag.alfabet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.I12)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YEAR)
        </td>
    </tr>
}

</table>
