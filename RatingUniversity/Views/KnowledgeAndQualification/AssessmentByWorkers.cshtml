@model IEnumerable<RatingUniversity.Models.I11_ocenka_kvalifikacii_vipusknikov_rabotodatelyami>

@{ Layout = "~/Views/Shared/_LayoutSideMenu.cshtml"; }

<h3>@ViewBag.Title</h3>

<table class="table table-striped" style="font-size:14px;">
    <tr>
        <th>Рейтинг</th>
        <th>Название высшего учебного заведения</th>
        <th>Количество респондентов, участвующих в опросе (Тсти)</th>
        <th>Обобщенная положителная оценка</th>
        <th>Итоговая оценка вуза по методике опроса "Работадатели о выпускниках вузов"</th>
        <th>Показатель рейтинга оценки квалификации выпускников вуза по результатам опроса работодателей.</th>
        <th>Год проведения рейтинга</th>
    </tr>

@{var position=0;}
@foreach (var item in Model)
{
    position++;
    <tr>
        <td>
            @position
        </td>
        <td width="35%">
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.r)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.r1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.I11)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YEAR)
        </td>
    </tr>
}

</table>
