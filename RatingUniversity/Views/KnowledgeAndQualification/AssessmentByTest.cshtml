@model IEnumerable<RatingUniversity.Models.I10_rezultati_attestacii_u_studentov>

@{ Layout = "~/Views/Shared/_LayoutSideMenu.cshtml"; }

<h3>@ViewBag.Title</h3>

<table class="table table-striped" style="font-size:14px;">
    <tr>
        <th rowspan="2">Рейтинг</th>
        <th rowspan="2">Название высшего учебного заведения</th>
        <th colspan="2">Количество студентов</th>
        <th rowspan="2">Оценка знаний студентов (по результатам выборочного тестирования студентов старших курсов по специальным профильным дисциплинам).</th>
        <th rowspan="2">Показатель оценки знаний студентов (по результатам выборочного тестирования студентов старших курсов по специальным профильным дисциплинам).</th>
        <th rowspan="2">Год проведения рейтинга</th>
    </tr>
    <tr>
        <th>с положительной оценкой знаний  по каждому предмету (Тси)</th>
        <th>участвовавших в тестировании (Тсти)</th>
    </tr>

@{var position=0;}
@foreach (var item in Model)
{
    position++;
    <tr>
        <td>
            @position
        </td>
        <td width="35%">
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tsi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tsti)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.I10)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YEAR)
        </td>
    </tr>
}

</table>
