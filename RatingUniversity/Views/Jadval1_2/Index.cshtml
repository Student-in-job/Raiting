    @model IEnumerable<RatingUniversity.Models.Jadval_talimsifati_1_2>
    @using MyFunctions = RatingUniversity.Classes.Functions;
    @using Resource = RatingUniversity.Langs.Resource;

    @{
	    Layout = "~/Views/Shared/_LayoutSideMenuEdit.cshtml";
	    int count = 1;	
    }

    @if ((ViewBag.status == -1 || ViewBag.status == 0) && ViewBag.status_date == 0 && ViewBag.isAdmin)
    { 
        <div class="well well-sm">
            <i class="glyphicon glyphicon-download-alt"></i> <a href="/Jadval1_2/Download">@MyFunctions.Translate(Resource.DownloadTemplate, ViewBag.lang, ViewBag.alfabet)</a>
        </div>
        using (Html.BeginForm("Upload", "Jadval1_2", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {    
                <fieldset>
                    <legend>@MyFunctions.Translate(Resource.AttachFile, ViewBag.lang, ViewBag.alfabet)</legend>
                    <div class="input-group">
                        <input type="file" class="form-control" name="files" />
                        <span class="input-group-btn"><input type="submit" name="Submit" id="Submit" class="btn btn-primary" value="@MyFunctions.Translate(Resource.Upload, ViewBag.lang, ViewBag.alfabet)" /></span>
                    </div>
                </fieldset>
        }
    }
    @if ((ViewBag.status == -1 || ViewBag.status == 0) && ViewBag.status_date == 1 && ViewBag.IsAdmin)
    {
        <div>
            <p class="bg-success text-center info-failed">@MyFunctions.Translate(Resource.DTM_vremya_istek, ViewBag.lang, ViewBag.alfabet)</p>
        </div>
    }
    @if (ViewBag.status == 1 && ViewBag.IsAdmin)
    {
        <div>
            <p class="bg-success text-center info-success">@MyFunctions.Translate(Resource.DTM_danniye_podtverjdeni, ViewBag.lang, ViewBag.alfabet)</p>
        </div>
    }
    @if (ViewBag.status == 0 && ViewBag.IsAdmin)
    {
        using (Html.BeginForm("ApproveAdmin", "Jadval1_2", FormMethod.Post))
        {
            <fieldset>
                <div class="input-group">
                    <span class="input-group-btn"><input type="submit" name="Submit" id="Submit" class="btn btn-primary" value="@MyFunctions.Translate(Resource.Approve, ViewBag.lang, ViewBag.alfabet)" /></span>
                </div>
            </fieldset>
        }
    }
    <h3 class="text-center">@MyFunctions.Translate(Resource.T1_2_Zagolovok, ViewBag.lang, ViewBag.alfabet)</h3>

    @if (ViewBag.bor == true)
    {
        <table class="table table-bordered">
            <tr class="txtcenter">
                <th rowspan="2">№</th>
                <th rowspan="2">@MyFunctions.Translate(Resource.T1_2_VUZ, ViewBag.lang, ViewBag.alfabet)</th>
                <th rowspan="2">@MyFunctions.Translate(Resource.T1_2_kol_stud, ViewBag.lang, ViewBag.alfabet)</th>
                <th colspan="3">@MyFunctions.Translate(Resource.T1_2_N1, ViewBag.lang, ViewBag.alfabet)</th>
                <th colspan="3">@MyFunctions.Translate(Resource.T1_2_N2, ViewBag.lang, ViewBag.alfabet)</th>
                <th colspan="3">@MyFunctions.Translate(Resource.T1_2_N3, ViewBag.lang, ViewBag.alfabet)</th>
                
            </tr>
            <tr class="txtcenter">
                <th>@MyFunctions.Translate(Resource.T1_2_kol_vopros, ViewBag.lang, ViewBag.alfabet)</th>
                <th>@MyFunctions.Translate(string.Format(Resource.T1_2_kol_otvet, "4"), ViewBag.lang, ViewBag.alfabet)</th>
                <th>@MyFunctions.Translate(string.Format(Resource.T1_2_kol_otvet, "5"), ViewBag.lang, ViewBag.alfabet)</th>
                <th>@MyFunctions.Translate(Resource.T1_2_kol_vopros, ViewBag.lang, ViewBag.alfabet)</th>
                <th>@MyFunctions.Translate(string.Format(Resource.T1_2_kol_otvet, "4"), ViewBag.lang, ViewBag.alfabet)</th>
                <th>@MyFunctions.Translate(string.Format(Resource.T1_2_kol_otvet, "5"), ViewBag.lang, ViewBag.alfabet)</th>
                <th>@MyFunctions.Translate(Resource.T1_2_kol_vopros, ViewBag.lang, ViewBag.alfabet)</th>
                <th>@MyFunctions.Translate(string.Format(Resource.T1_2_kol_otvet, "4"), ViewBag.lang, ViewBag.alfabet)</th>
                <th>@MyFunctions.Translate(string.Format(Resource.T1_2_kol_otvet, "5"), ViewBag.lang, ViewBag.alfabet)</th>
            </tr>
            
            @foreach (var item in Model) 
            {
                <tr>
                    <td>@count</td>
                    <td>@MyFunctions.Translate(ViewBag.listUniversities[item.UniversityId], ViewBag.lang, ViewBag.alfabet)</td>
                    <td>@Html.DisplayFor(modelItem => item.T)</td>
                    <td>@Html.DisplayFor(modelItem => item.N1)</td>
                    <td>@Html.DisplayFor(modelItem => item.N41)</td>
                    <td>@Html.DisplayFor(modelItem => item.N51)</td>
                    <td>@Html.DisplayFor(modelItem => item.N2)</td>
                    <td>@Html.DisplayFor(modelItem => item.N42)</td>
                    <td>@Html.DisplayFor(modelItem => item.N52)</td>
                    <td>@Html.DisplayFor(modelItem => item.N3)</td>
                    <td>@Html.DisplayFor(modelItem => item.N43)</td>
                    <td>@Html.DisplayFor(modelItem => item.N53)</td>
                </tr>
                count++;
            }
        </table>
    }
