    @using PagedList.Mvc;
    @model PagedList.IPagedList<RatingUniversity.Models.Jadval9>
    @using MyFunctions = RatingUniversity.Classes.Functions;
    @using Resource = RatingUniversity.Langs.Resource;
	<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

	@{
		Layout = "~/Views/Shared/_LayoutSideMenuEdit.cshtml";
		int count = 1;
	}

	@if ((ViewBag.status == -1 || ViewBag.status == 0) && ViewBag.status_date == 0 && !ViewBag.isAdmin)
    {
        <div class="well well-sm">
            <i class="glyphicon glyphicon-download-alt"></i> <a href="~/Jadval9/Download">@MyFunctions.Translate(Resource.DownloadTemplate, ViewBag.lang, ViewBag.alfabet)</a>
        </div>
        using (Html.BeginForm("Upload", "Jadval9", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <fieldset>
            <legend>@MyFunctions.Translate(Resource.AttachFile, ViewBag.lang, ViewBag.alfabet)</legend>
            <div class="input-group">
                <input type="file" class="form-control" name="files" />
                <span class="input-group-btn"><input type="submit" name="Submit" id="Submit" class="btn btn-primary" value="@MyFunctions.Translate(Resource.Upload, ViewBag.lang, ViewBag.alfabet)" /></span>
            </div>
            </fieldset>
        }
    }
    @if ((ViewBag.status == null || ViewBag.status == 0) && ViewBag.status_date == 1)
    {
        <div>
            <p class="bg-success text-center info-failed">@MyFunctions.Translate(Resource.DTM_vremya_istek, ViewBag.lang, ViewBag.alfabet)</p>
        </div>
    }
    @if (ViewBag.status == 1)
    {
        <div>
            <p class="bg-success text-center info-success">@MyFunctions.Translate(Resource.DTM_danniye_podtverjdeni, ViewBag.lang, ViewBag.alfabet)</p>
        </div>
    }
    @if (ViewBag.status == 0 && ViewBag.isAdmin)
    {
        using (Html.BeginForm("Approve", "Jadval9", FormMethod.Post))
        {
            <fieldset>
                <div class="input-group">
                    <input type="hidden" class="form-control" name="id" value="@ViewBag.id" />
                    <span class="input-group-btn"><input type="submit" name="Submit" id="Submit" class="btn btn-primary" value="@MyFunctions.Translate(Resource.Approve, ViewBag.lang, ViewBag.alfabet)" /></span>
                </div>
            </fieldset>
        }
    }
    <h3 class="text-center font-bold">@MyFunctions.Translate(ViewBag.university, ViewBag.lang, ViewBag.alfabet)</h3>
    <h4 class="text-center font-bold">@MyFunctions.Translate(Resource.T9_zagolovok, ViewBag.lang, ViewBag.alfabet)</h4>

	@if (ViewBag.bor == true)
	{
		<table class="table table-bordered">
			<tr class="txtcenter">
				<th>№</th>
				@if (ViewBag.status == 0 && ViewBag.role == 1)
				{
					<th>Статус</th>
				}
				<th>@MyFunctions.Translate(Resource.T9_fish, ViewBag.lang, ViewBag.alfabet)</th>
				<th>@MyFunctions.Translate(Resource.T9_xorijiy_otm, ViewBag.lang, ViewBag.alfabet)</th>
				<th>@MyFunctions.Translate(Resource.T9_mutaxassislik, ViewBag.lang, ViewBag.alfabet)</th>
				<th>@MyFunctions.Translate(Resource.T9_fan, ViewBag.lang, ViewBag.alfabet)</th>
				<th>@MyFunctions.Translate(Resource.T9_asos, ViewBag.lang, ViewBag.alfabet)</th>
				<th>@MyFunctions.Translate(Resource.T9_fayl, ViewBag.lang, ViewBag.alfabet)</th>
			</tr>

			@foreach (var item in Model)
			{
				<tr @(item.Status == 1 ? "" : "class=danger")>
					<td>@count</td>
					@if (ViewBag.status == 0 && ViewBag.role == 1)
					{
						<td>
							@if (item.Status == 1)
							{
								<a href="/Jadval9/Status/@item.Id">Не принимать</a>
							}
							else
							{
								<a href="/Jadval9/Status/@item.Id">Принимать</a>
							}
						</td>
					}
					<td>@Html.DisplayFor(modelItem => item.FullName)</td>
					<td>@Html.DisplayFor(modelItem => item.State_otm)</td>
					<td>@Html.DisplayFor(modelItem => item.Speciality)</td>
					<td>@Html.DisplayFor(modelItem => item.Subject)</td>
					<td>@Html.DisplayFor(modelItem => item.Asos)</td>
                    <td>
                        <span>
                            @{string fileLink = Request.Url.GetLeftPart(UriPartial.Authority) + "/Scripts/ViewerJS/#../../Files/Upload/" + item.Asos_fayl;}
                            <a href=# onclick="OpenUrl('@fileLink')"><img src="~/Images/pdf_icon.png" style="height:35px" /> </a>
                        </span>
                        @using (Html.BeginForm("UploadFiles", "Jadval9", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <input type="file" name="files" />
                            <input type="hidden" name="id" value="@Html.DisplayFor(modelItem => item.Id)" />
                            <input type="submit" name="Submit" id="Submit" value="@MyFunctions.Translate(Resource.Upload, ViewBag.lang, ViewBag.alfabet)" />
                        }
                    </td>
				</tr>
			}

		</table>
	    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        @Scripts.Render("~/Scripts/site.js");
	}
