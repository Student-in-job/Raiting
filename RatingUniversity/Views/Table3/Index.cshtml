                    <th colspan="6" style="text-align:center">@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.PPSVisitingHeader, ViewBag.lang, ViewBag.alfabet)</th>
                    <th colspan="4" style="text-align:center">@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.PPSHourlyHeader, ViewBag.lang, ViewBag.alfabet)</th>
                </tr>
                <tr>
                    <th>@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.PPSBasicStaff, ViewBag.lang, ViewBag.alfabet)</th>
                    <th>@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.PPSVisitingStaff, ViewBag.lang, ViewBag.alfabet)</th>
                    <th>@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.PPSHourly, ViewBag.lang, ViewBag.alfabet)</th>
                    <th>@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.PPSphDeX, ViewBag.lang, ViewBag.alfabet)</th>
                    <th>@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.PPSphD, ViewBag.lang, ViewBag.alfabet)</th>
                    <th>@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.PPSProfessor, ViewBag.lang, ViewBag.alfabet)</th>
                    <th>@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.PPSDocent, ViewBag.lang, ViewBag.alfabet)</th>
                    <th>@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.PPSTeacher, ViewBag.lang, ViewBag.alfabet)</th>
                    <th>@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.PPSAssistant, ViewBag.lang, ViewBag.alfabet)</th>
                    <th>@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.PPSProfessorPhD, ViewBag.lang, ViewBag.alfabet)</th>
                    <th>@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.PPSDocentPhD, ViewBag.lang, ViewBag.alfabet)</th>
                    <th>@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.PPSTeacher, ViewBag.lang, ViewBag.alfabet)</th>
                    <th>@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.PPSAssistant, ViewBag.lang, ViewBag.alfabet)</th>
                    <th>@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.PPSProfessorPhD, ViewBag.lang, ViewBag.alfabet)</th>
                    <th>@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.PPSDocentPhD, ViewBag.lang, ViewBag.alfabet)</th>
                    <th>@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.PPSTeacher, ViewBag.lang, ViewBag.alfabet)</th>
                    <th>@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.PPSAssistant, ViewBag.lang, ViewBag.alfabet)</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
