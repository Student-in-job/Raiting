@model IEnumerable<RatingUniversity.Models.Jadval_AKTdaraja_1_7>

@{
	Layout = "~/Views/Shared/_LayoutSideMenuEdit.cshtml";
	ViewBag.Title = "Jadval1_7";
	int count = 1;
}

@if (ViewBag.role == 1)
{

        <div class="well well-sm">
            <i class="glyphicon glyphicon-download-alt"></i> <a href="/Jadval1_7/Download">@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.DownloadTemplate, ViewBag.lang, ViewBag.alfabet)</a>
        </div>
    using (Html.BeginForm("Upload", "Jadval1_7", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <fieldset>
            <legend>@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.AttachFile, ViewBag.lang, ViewBag.alfabet)</legend>

            <div class="input-group">
                <input type="file" class="form-control" name="files" />
                <span class="input-group-btn"><input type="submit" name="Submit" id="Submit" class="btn btn-primary" value="@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.Upload, ViewBag.lang, ViewBag.alfabet)" /></span>
            </div>
        </fieldset>
    }
}
				  <h3 class="text-center">@RatingUniversity.Classes.Functions.Translate(RatingUniversity.Langs.Resource.T1_7_zogolovok, ViewBag.lang, ViewBag.alfabet)</h3>

@if (ViewBag.bor == true)
{
<table class="table table-bordered">
	<tr class="txtcenter">
		<th>№</th>
		<th>
			@Html.DisplayNameFor(model => model.P)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.P7)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.P8)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.Year)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.UniversityId)
		</th>
	</tr>

@foreach (var item in Model) {
    <tr>
		<td>@count</td>@{count++;}
        <td>
            @Html.DisplayFor(modelItem => item.P)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.P7)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.P8)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UniversityId)
        </td>
    </tr>
}

</table>
}