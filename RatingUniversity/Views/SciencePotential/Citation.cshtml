@model IEnumerable<RatingUniversity.Models.I14_citiruemost_publikaciy_pps>

@{ Layout = "~/Views/Shared/_LayoutSideMenu.cshtml"; }

<h3>@ViewBag.Title</h3>

<table class="table table-striped" style="font-size:14px;">
    <tr>
        <th rowspan="2">Рейтинг</th>
        <th rowspan="2">Название высшего учебного заведения</th>
        <th colspan="2">Цитируемость публикаций</th>
        <th rowspan="2">Цитируемость публикаций ППС вуза по данным международных индексов</th>
        <th rowspan="2">Показатель цитируемости публикаций ППС вуза по данным международных индексов</th>
        <th rowspan="2">Год проведения рейтинга</th>
    </tr>
    <tr>
        <th>на узбекском и русском языках</th>
        <th>на иностранных языках</th>
    </tr>

@{var position=0;}
@foreach (var item in Model)
{
    position++;
    string name = (ViewBag.lang == "RU") ? item.name_RU : item.name_UZ;
    <tr>
        <td>
            @position
        </td>
        <td width="35%">
            @RatingUniversity.Classes.Functions.Translate(name, ViewBag.lang, ViewBag.alfabet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.I141)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.I142)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.I14)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YEAR)
        </td>
    </tr>
}

</table>
