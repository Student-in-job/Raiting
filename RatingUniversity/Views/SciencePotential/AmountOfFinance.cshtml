@model IEnumerable<RatingUniversity.Models.I17_summa_finansovih_sredstv_poluchennih_na_nauchnuyu_deyatelnost>

@{ Layout = "~/Views/Shared/_LayoutSideMenu.cshtml"; }

<h3>@ViewBag.Title</h3>

<table class="table table-striped" style="font-size:14px;">
    <tr>
        <th rowspan="2">Рейтинг</th>
        <th rowspan="2">Название высшего учебного заведения</th>
        <th colspan="4">Финансовые средства, полученные</th>
        <th rowspan="2">Сумма финансовых средств, полученных от научно-исследовательской деятельности (в расчете на 1 ППС)</th>
        <th rowspan="2">Показатель суммы финансовых средств, полученных от научно-исследовательской деятельности (в расчете на 1 ППС)</th>
        <th rowspan="2">Год проведения рейтинга</th>
    </tr>
    <tr>
        <th>за счет грантов и заказов зарубежных научных фондов и исследовательских центров (в расчете на 1 ППС)</th>
        <th>от проведенных НИОКР по заказам соответствующих (производств)  отраслей экономики  (в расчете на 1 ППС)</th>
        <th>от исследований, проведенных за счет государственных грантов (в расчете на 1 ППС)</th>
        <th>от заключенных лицензионных соглашений</th>
    </tr>

@{var position=0;}
@foreach (var item in Model)
{
    position++;
    <tr>
        <td>
            @position
        </td>
        <td width="35%">
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.I171)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.I172)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.I173)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.I174)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.I17)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YEAR)
        </td>
    </tr>
}

</table>
