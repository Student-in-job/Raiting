@model IEnumerable<RatingUniversity.Models.I16_kolichestvo_sotrudnikov_utverjdennih_vak>

@{ Layout = "~/Views/Shared/_LayoutSideMenu.cshtml"; }

<h3>@ViewBag.Title</h3>

<table class="table table-striped" style="font-size:14px;">
    <tr>
        <th>Рейтинг</th>
        <th>Название высшего учебного заведения</th>
        <th>Количество сотрудников высшего учебного заведения, утвержденных в расчетном году Президиумом ВАК в ученой степени доктора наук</th>
        <th>Количество профессоров-преподавателей, имеющих ученые степени (звания)</th>
        <th>Количество сотрудников высших учебных заведений утвержденных Президиумом ВАК в ученой степени доктора наук и профессоров-преподавателей, имеющих ученые степени (звания)</th>
        <th>Показатель количества сотрудников высших учебных заведений утвержденных Президиумом ВАК в ученой степени доктора наук и профессоров-преподавателей, имеющих ученые степени (звания)</th>
        <th>Год проведения рейтинга</th>
    </tr>

@{var position=0;}
@foreach (var item in Model)
{
    position++;
    <tr>
        <td>
            @position
        </td>
        <td width="35%">
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.I161)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.I162)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.I16)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YEAR)
        </td>
    </tr>
}

</table>
