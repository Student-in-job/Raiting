@using PagedList.Mvc;
@model PagedList.IPagedList<RatingUniversity.Models.Jadval2>
	<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

	@{
		Layout = "~/Views/Shared/_LayoutSideMenuEdit.cshtml";
	}


	<h2>300 та энг яхши хорижий ОТМлари  даражаси (РhD) ёки магистрлик димломига эга бўлган асосий штатдаги профессор-ўқитувчилар  ҳақида
</h2>

	@if ((ViewBag.status == null || ViewBag.status == 0) && ViewBag.status_date == 0 && ViewBag.role != 1)
	{
		<a href="/Jadval2/Download">Загрузить шаблон</a>
		<h3>Прикрепить файл</h3>

		using (Html.BeginForm("Upload", "Jadval2", FormMethod.Post, new { enctype = "multipart/form-data" }))
		{
			<input type="file" name="files" />
			<input type="submit" name="Submit" id="Submit" value="Прикрепить" />
		}
	}
	@if ((ViewBag.status == null || ViewBag.status == 0) && ViewBag.status_date == 1)
	{
		<h3>Ma'lumotlarni kiritish uchun vaqtingiz tugadi</h3>
	}
	@if (ViewBag.status == 1)
	{
		<h3>Ma'lumotlarni tasdiqlangan</h3>
	}
	@if (ViewBag.status == 0)
	{
		<h3>Ma'lumotlar tasdiqlanmagan</h3>
	}
	@if (ViewBag.status == 0 && ViewBag.role == 1)
	{
		<a href="/Jadval2/Tasdiqlash/@ViewBag.UniverId">Подтверждать</a>
	}
	@if (ViewBag.bor == true)
	{
		<h3>Ma'lumotlar:</h3>
		<table class="table">
			<tr>
				<th>Асосий штатдаги профессор-ўқитувчиларнинг Ф.И.Ш</th>
				<th>Илмий даража берган хориж ОТМ номи</th>
				<th>PhD (фан доктори, фан номзоди) Диплом серияси</th>
				<th>PhD (фан доктори, фан номзоди) Диплом рақами</th>
				<th>Магистрлик (дипломли мутахассис)  диплом серияси</th>
				<th>Магистрлик (дипломли мутахассис)  диплом рақами*</th>
				<th>Мутахассислиги номи</th>
				<th>Ишга қабул қилинганлиги тўғрисидаги буйруқ рақами ва санаси</th>
				<th>Файл</th>
				<th>Йил</th>
				<th>UniversityId</th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.FullName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Jadval1_Id)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Phd_seriya)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Phd_nomer)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Mag_seriya)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Mag_nomer)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Speciality)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Ishga_qabul_buyruq)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.AsosFile)
						<br />
						@using (Html.BeginForm("UploadData", "Jadval2", FormMethod.Post, new { enctype = "multipart/form-data" }))
						{
							<input type="file" name="files" />
							<input type="hidden" name="id" value="@Html.DisplayFor(modelItem => item.Id)" />
							<input type="submit" name="Submit" id="Submit" value="Прикрепить" />
						}


					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Year)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.UniversityId)
					</td>
				</tr>
			}

		</table>
	@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
	}
