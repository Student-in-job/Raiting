@model IEnumerable<RatingUniversity.Models.I4_TOTAL>

@{ Layout = "~/Views/Shared/_LayoutSideMenuRaiting.cshtml"; }

<h3 style="text-align:center">@ViewBag.Title</h3>

<table class="table table-striped" style="font-size:14px;">
    <thead>
        <tr>
            <th>Рейтинг</th>
            <th>Название высшего учебного заведения</th>
            <th>Обеспеченность ИРЦ учебной литературой в соответствии с требованиями учебных программ, а также электронными версиями учебной литературы</th>
            <th>Степень использования средств ИКТ в учебном процессе и научно-исследовательской работе, компьютерной техники, а также обновляемость компьютерного парка</th>
            <th>Степень доступности и качества информации о вузе в сети Интернет (качество дизайна веб-сайта, достаточность учебно-научных и информационных ресурсов, обновляемость материалов, а также посещаемость веб-сайта)</th>
            <th>Степень оснащенности материально-технической базы вуза современным лабораторным оборудованием и инвентарем, мультимедийной учебно-презентационной техникой</th>
            <th>Итоговый рейтинг</th>
        </tr>
    </thead>
    <tbody>
    @{var position = 0;}
    @foreach (var item in Model)
    {
        position++;
        string name = (ViewBag.lang == "RU") ? item.name_RU : item.name_UZ;
        <tr>
            <td>
                @position
            </td>
            <td width="35%">
                @RatingUniversity.Classes.Functions.Translate(name, ViewBag.lang, ViewBag.alfabet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I20)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I21)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I22)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I23)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mark)
            </td>
        </tr>
    }
    </tbody>
</table>
