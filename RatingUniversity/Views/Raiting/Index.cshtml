@model IEnumerable<RatingUniversity.Models.RAITING_TOTAL>

@{ Layout = "~/Views/Shared/_LayoutSideMenuRaiting.cshtml"; }

<h3 style="text-align:center">@ViewBag.Title</h3>

<table class="table table-striped" style="font-size:14px;">
    <thead>
        <tr>
            <th>№</th>
            <th>Название высшего учебного заведения</th>
            <th>Уровень качества преподавания</th>
            <th>Уровень знания студентов и квалификация выпускников</th>
            <th>Уровень научного потенциала высшего учебного заведения</th>
            <th>Уровень оснащенности материально-технической базы и внедрения ИКТ</th>
            <th>Итоговый рейтинг</th>
        </tr>
    </thead>
    <tbody>
    @{var position = 0;}
    @foreach (var item in Model)
    {
        position++;
        string name = (ViewBag.lang == "RU") ? item.name_RU : item.name_UZ;
        <tr>
            <td>
                @position
            </td>
            <td width="35%">
                @RatingUniversity.Classes.Functions.Translate(name, ViewBag.lang, ViewBag.alfabet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I4)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mark)
            </td>
        </tr>
    }
    </tbody>
</table>
