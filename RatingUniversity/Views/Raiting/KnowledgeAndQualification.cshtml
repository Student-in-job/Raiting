@model IEnumerable<RatingUniversity.Models.I2_TOTAL>

@{ Layout = "~/Views/Shared/_LayoutSideMenuRaiting.cshtml"; }

<h3 style="text-align:center">@ViewBag.Title</h3>

<table class="table table-striped" style="font-size:14px;">
    <thead>
        <tr>
            <th>№</th>
            <th>Название высшего учебного заведения</th>
            <th>Оценка знаний студентов (по результатам выборочного тестирования студентов по специальным профильным дисциплинам)</th>
            <th>Оценка квалификации выпускников вуза по результатам опроса работодателей</th>
            <th>Доля выпускников, трудоустроенных по специальности в течение 6 месяцев после окончания вуза</th>
            <th>Количество студентов, удостоенных наград (дипломов) и занявших призовые места на международных и республиканских олимпиадах и престижных конкурсах</th>
            <th>Итоговый рейтинг</th>
        </tr>
    </thead>
    <tbody>
    @{var position = 0;}
    @foreach (var item in Model)
    {
        position++;
        string name = (ViewBag.lang == "RU") ? item.name_RU : item.name_UZ;
        <tr>
            <td>
                @position
            </td>
            <td width="35%">
                @RatingUniversity.Classes.Functions.Translate(name, ViewBag.lang, ViewBag.alfabet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I10)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I11)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I12)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I13)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mark)
            </td>
        </tr>
    }
    </tbody>
</table>
