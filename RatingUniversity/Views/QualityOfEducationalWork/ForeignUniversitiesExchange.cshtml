@model IEnumerable<RatingUniversity.Models.I5_uchastie_v_programme_obmena>

@{ Layout = "~/Views/Shared/_LayoutSideMenu.cshtml"; }

<h3>@ViewBag.Title</h3>

<table class="table table-striped" style="font-size:14px;">
    <tr>
        <th>Рейтинг</th>
        <th>Название высшего учебного заведения</th>
        <th>Академический обмен (студентами)</th>
        <th>Участие студентов в научных, образовательных проектах (зарубежных, совместных)</th>
        <th>Участие преподавателей в научных, образовательных проектах (зарубежных, совместных)</th>
        <th>Участие студентов в зарубежных международных конференциях, семинарах.</th>
        <th>Участие преподавателей в зарубежных международных конференциях, семинарах.</th>
        <th>Участие преподавателей и студентов в программах обмена с зарубежными вузами</th>
        <th>Показатель участие преподавателей и студентов в программах обмена с зарубежными вузами</th>
        <th>Год проведения рейтинга</th>
    </tr>

    @{var position = 0;}
    @foreach (var item in Model)
    {
        position++;
        string name = (ViewBag.lang == "RU") ? item.name_RU : item.name_UZ; 
    <tr>
        <td>
            @position
        </td>
        <td width="35%">
            @RatingUniversity.Classes.Functions.Translate(name, ViewBag.lang, ViewBag.alfabet)
        </td>
            <td>
                @Html.DisplayFor(modelItem => item.I51)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I52_1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I52_2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I53_1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I53_2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.I5)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.mark)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YEAR)
            </td>
        </tr>
    }

</table>