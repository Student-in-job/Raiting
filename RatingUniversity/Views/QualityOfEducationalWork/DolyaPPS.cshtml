@model IEnumerable<RatingUniversity.Models.I1_dolya_pps_s_uchenoy_stepenyu>

@{ Layout = "~/Views/Shared/_LayoutSideMenu.cshtml"; }

<h3>@ViewBag.Title</h3>

<table class="table table-striped" style="font-size:14px;">
    <tr>
        <th>Рейтинг</th>
        <th>Название высшего учебного заведения</th>
        <th>Доля ППС имеющего степень PhD</th>
        <th>Доля ППС имеющего степень магистра</th>
        <th>Доля профессорско-преподавательского состава (ППС), имеющего степень PhD магистра зарубежных высших образовательных учреждений</th>
        <th>Показатель рейтинга ППС, имеющего степень PhD, магистра зарубежных вузов, входящих в число 500 лучших вузов мира</th>
        <th>Год проведения рейтинга</th>
    </tr>

@{var position=0;}
@foreach (var item in Model)
{
    position++;
    string name = (ViewBag.lang == "RU") ? item.name_RU : item.name_UZ; 
    <tr>
        <td>
            @position
        </td>
        <td width="35%">
            @RatingUniversity.Classes.Functions.Translate(name, ViewBag.lang, ViewBag.alfabet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.I11)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.I12)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.I1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YEAR)
        </td>
    </tr>
}

</table>
