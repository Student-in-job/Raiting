@model IEnumerable<RatingUniversity.Models.I7_uroven_angliyskogo_i_ikt_u_pps>

@{ Layout = "~/Views/Shared/_LayoutSideMenu.cshtml"; }

<h3>@ViewBag.Title</h3>

<table class="table table-striped" style="font-size:14px;">
    <tr>
        <th>Рейтинг</th>
        <th>Название высшего учебного заведения</th>
        <th>Уровень владения ППС иностранным языком </th>
        <th>Уровень владения ППС информационно-коммуникационными технологиями</th>
        <th>Уровень владения профессорско-преподавательским составом иностранными языками и информационно-коммуникационными технологиями</th>
        <th>Показатель уровень владения профессорско-преподавательским составом иностранными языками и информационно-коммуникационными технологиями</th>
        <th>Год проведения рейтинга</th>
    </tr>

@{var position=0;}
@foreach (var item in Model)
{
    position++;
    <tr>
        <td>
            @position
        </td>
        <td width="35%">
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.I71)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.I72)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.I7)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YEAR)
        </td>
    </tr>
}

</table>
