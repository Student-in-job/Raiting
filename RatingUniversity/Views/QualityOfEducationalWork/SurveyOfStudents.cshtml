    <tr>
        <th>Рейтинг</th>
        <th>Название высшего учебного заведения</th>
        <th>Общее количество студентов вуза</th>
        <th>Количество опрошенных студентов</th>
        <th>Итоговый показатель I2</th>
        <th>Показатель уровень качества преподавания</th>
        <th>Год проведения рейтинга</th>
    </tr>
@{var position = 0;}
@foreach (var item in Model)
{
    position++;
    string name = (ViewBag.lang == "RU") ? item.name_RU : item.name_UZ; 
    <tr>
        <td>
            @position
        </td>
        <td width="35%">
            @RatingUniversity.Classes.Functions.Translate(name, ViewBag.lang, ViewBag.alfabet)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.p1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.t)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.i2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.mark)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YEAR)
        </td>
    </tr>
}

</table>
