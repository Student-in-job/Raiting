                        <tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
            
@Scripts.Render("~/Scripts/jquery-ui-1.10.4.custom.min.js")
@Styles.Render("~/Content/jquery-ui-1.10.4.custom.min.css")
<script>
    $(function () {
        $("#tabs").tabs();
    });
</script>
