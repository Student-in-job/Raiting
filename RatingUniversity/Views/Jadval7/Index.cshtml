@using PagedList.Mvc;
@model PagedList.IPagedList<RatingUniversity.Models.Jadval7>
	<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

	@{
		Layout = "~/Views/Shared/_LayoutSideMenuEdit.cshtml";
	}

	<h2>Universitetlar reytingi</h2>

	@if ((ViewBag.status == null || ViewBag.status == 0) && ViewBag.status_date == 0 && ViewBag.role != 1)
	{
		<a href="/Jadval7/Download">Загрузить шаблон</a>
		<h3>Прикрепить файл</h3>

		using (Html.BeginForm("Upload", "Jadval7", FormMethod.Post, new { enctype = "multipart/form-data" }))
		{
			<input type="file" name="files" />
			<input type="submit" name="Submit" id="Submit" value="Прикрепить" />
		}
	}
	@if ((ViewBag.status == null || ViewBag.status == 0) && ViewBag.status_date == 1)
	{
		<h3>Ma'lumotlarni kiritish uchun vaqtingiz tugadi</h3>
	}
	@if (ViewBag.status == 1)
	{
		<h3>Ma'lumotlarni tasdiqlangan</h3>
	}
	@if (ViewBag.status == 0)
	{
		<h3>Ma'lumotlar tasdiqlanmagan</h3>
	}
	@if (ViewBag.status == 0 && ViewBag.role == 1)
	{
		<a href="/Jadval7/Tasdiqlash/@ViewBag.UniverId">Подтверждать</a>
	}
	@if (ViewBag.bor == true)
	{
		<h3>Ma'lumotlar:</h3>
		<table class="table">
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.FullName_uzb)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.State_uzb)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Mutaxassislik_uzb)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.FullName_xorij)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.State_xorij)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Mutaxassislik_xorij)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Asos)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Asos_fayl)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Bak_mag)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Year)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.UniversityId)
				</th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.FullName_uzb)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.State_uzb)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Mutaxassislik_uzb)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.FullName_xorij)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.State_xorij)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Mutaxassislik_xorij)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Asos)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Asos_fayl)
						<br />
						@using (Html.BeginForm("UploadData", "Jadval7", FormMethod.Post, new { enctype = "multipart/form-data" }))
						{
							<input type="file" name="files" />
							<input type="hidden" name="id" value="@Html.DisplayFor(modelItem => item.Id)" />
							<input type="submit" name="Submit" id="Submit" value="Прикрепить" />
						}
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Bak_mag)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Year)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.UniversityId)
					</td>
				</tr>
			}

		</table>
	@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
	}
