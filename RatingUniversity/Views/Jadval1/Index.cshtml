@model IEnumerable<RatingUniversity.Models.Jadval1>
@using RatingUniversity.Resources
	
@{ Layout = "~/Views/Shared/_LayoutSideMenuEdit.cshtml"; }

<!--<h2>@ResourceRu.Title</h2>-->
  	<h2>Top университет - 300</h2>

	<a href="/Jadval1/Download">Загрузить шаблон</a>


	<h3>Прикрепить файл</h3>

	@using (Html.BeginForm("Upload", "Jadval1", FormMethod.Post, new { enctype = "multipart/form-data" }))
	{
		<input type="file" name="files" />
	<input type="submit" name="Submit" id="Submit" value="Прикрепить" />
	}

	@if (ViewBag.bor == true)
	{
		<h3>Данные:</h3>	
		<table class="table">
			<tr>
				<th>
					@Html.DisplayNameFor(model => model.OtmName)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.State)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Reyting)
				</th>
				<th>
					@Html.DisplayNameFor(model => model.Year)
				</th>
			</tr>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.OtmName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.State)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Reyting)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Year)
					</td>
				</tr>
			}

		</table>
	}
